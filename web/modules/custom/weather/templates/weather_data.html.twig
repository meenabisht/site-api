{#
/**
* @file
* weather block.
* Available variables:
* - city: provide city name.
* - description: provide decription of city.
* - mintemp: provide minimum temperature of city.
* - maxtemp: provide maximum temperature of city.
* - pressure: provide pressure of city.
* - humid: provide humidity of city.
* - speed: provide speed of the wind of city.
*/
#}

{# css library which this twig file refers #}
{{ attach_library('weather/weather') }}

{# city and discription #}
<div class = "wrapper">
  <div class="new-background" style="background-image: url('{{ file_url(image) }}');"></div>
  <div class="hellocity">
  <img src="modules/custom/weather/images/newsun.png">
  {{ city }}
  </div>
  <div class="description">
  {{ description }}
  </div>

  {# weather data #}
  <div class="mainwrapper">
    <div class="weather_data">
      min temp<h1> {{ mintemp }}</h1>
    </div>
    <div class="weather_data">
      max temp<h1> {{ maxtemp }}</h1>
    </div>
    <div class="weather_data">
      pressure<h1> {{ pressure }}</h1>
    </div>
    <div class="weather_data">
      humidity<h1> {{ humid }}</h1>
    </div>
    <div class="weather_data">
      wind<h1> {{ speed }}</h1>
    </div>
  </div>

</div>